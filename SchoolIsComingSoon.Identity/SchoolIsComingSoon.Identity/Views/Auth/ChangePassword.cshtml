@model ChangePasswordViewModel
<head>
    <link href=@Url.Content("~/Styles/app.css") rel="stylesheet" type="text/css" />
</head>
<div class="panel">
    <form asp-controller="Auth" asp-action="ChangePassword" method="post">
        <input type="hidden" asp-for="ReturnUrl" />

        <div class="header">Смена пароля</div>

        <div class="block">
            <label>Текущий пароль</label>
            <input asp-for="OldPassword" class="input" type="password" />
            <span asp-validation-for="OldPassword"></span>
        </div>
        <div class="block">
            <label>Новый пароль</label>
            <input asp-for="NewPassword" class="input" type="password" />
            <span asp-validation-for="NewPassword"></span>
        </div>
        <div class="block">
            <label>Подтвердите пароль</label>
            <input asp-for="ConfirmNewPassword" class="input" type="password" />
            <span asp-validation-for="ConfirmNewPassword"></span>
        </div>
        <div class="block">
            <button type="submit" class="button">Изменить пароль</button>
        </div>
        <div class="links-row">
            <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="switch-link">Назад</a>
        </div>
    </form>
</div>